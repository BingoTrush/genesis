{
	"compilerOptions": {
		"baseUrl": "./",
		"target": "es2018",
		"module": "CommonJS",
        "moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"declaration": false,
		"esModuleInterop": true,
		"removeComments": false,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"outDir": "./dist/cjs"
	},
	"include": ["src"],
	"exclude": ["template", "dist", "types"]
}
