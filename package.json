{
    "name": "genesis",
    "private": true,
    "devDependencies": {
        "concurrently": "7.0.0",
        "lerna": "^4.0.0",
        "zx": "^5.1.0"
    },
    "workspaces": [
        "packages/*",
        "examples/*"
    ],
    "scripts": {
        "build": "zx script/index.js --packages build",
        "publish:all": "./script/publish.sh",
        "example:build": "zx script/index.js --examples build",
        "example:start": "zx script/index.js --examples start",
        "example:dev": "zx script/index.js --examples dev",
        "lint": "npm run lint:js && npm run lint:css",
        "lint:js": "genesis-eslint . --ext .js,.ts,.vue --fix",
        "lint:css": "genesis-stylelint **/*.{css,less,vue} --fix"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,js}": [
            "eslint --ext .js,.ts --fix",
            "git add"
        ],
        "*.{vue}": [
            "eslint --ext .js,.ts --fix",
            "git add"
        ]
    }
}
