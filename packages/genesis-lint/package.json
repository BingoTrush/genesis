{
    "name": "@fmfe/genesis-lint",
    "version": "2.0.9",
    "description": "",
    "main": "index.js",
    "bin": {
        "genesis-eslint": "./bin/eslint.sh",
        "genesis-stylelint": "./bin/stylelint.sh"
    },
    "scripts": {
        "build:cjs": "NODE_ENV=production genesis-tsc --build tsconfig.cjs.json",
        "build:esm": "NODE_ENV=production genesis-tsc --build tsconfig.esm.json",
        "build": "rm -rf dist types && npm run build:cjs && npm run build:esm",
        "postinstall": "node postinstall.js"
    },
    "author": "Followme",
    "license": "MIT",
    "dependencies": {
        "@typescript-eslint/eslint-plugin": "5.9.0",
        "@typescript-eslint/parser": "5.9.0",
        "babel-eslint": "10.1.0",
        "eslint": "8.6.0",
        "eslint-config-alloy": "4.4.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-config-standard": "17.0.0-0",
        "eslint-import-resolver-custom-alias": "1.3.0",
        "eslint-import-resolver-typescript": "2.5.0",
        "eslint-plugin-import": "2.25.4",
        "eslint-plugin-n": "14.0.0",
        "eslint-plugin-prettier": "4.0.0",
        "eslint-plugin-promise": "6.0.0",
        "eslint-plugin-simple-import-sort": "7.0.0",
        "eslint-plugin-vue": "8.2.0",
        "husky": "4.3.8",
        "lint-staged": "12.1.7",
        "postcss": "8.4.5",
        "postcss-html": "1.3.0",
        "postcss-less": "6.0.0",
        "prettier": "2.5.1",
        "stylelint": "14.5.2",
        "stylelint-config-html": "1.0.0",
        "stylelint-config-prettier": "9.0.3",
        "stylelint-config-rational-order": "0.1.2",
        "stylelint-config-standard": "24.0.0",
        "stylelint-order": "5.0.0",
        "typescript": "4.5.5",
        "vue-eslint-parser": "8.0.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,js}": [
            "eslint --ext .js,.ts --fix",
            "git add"
        ],
        "*.{css,less}": [
            "stylelint --fix",
            "git add"
        ],
        "*.{vue}": [
            "eslint --ext .js,.ts --fix",
            "stylelint --fix",
            "git add"
        ]
    },
    "homepage": "https://fmfe.github.io/genesis-docs/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/fmfe/genesis.git"
    },
    "bugs": {
        "url": "https://github.com/fmfe/genesis/issues"
    },
    "gitHead": "e35daab9dbc790fe70b1e4e26879fd0cc4933e1b"
}
