{
    "name": "genesis",
    "private": true,
    "devDependencies": {
        "lerna": "^4.0.0",
        "typescript": "^4.5.5",
        "concurrently": "7.0.0"
    },
    "workspaces": [
        "packages/*",
        "examples/*"
    ],
    "scripts": {
        "build": "./script/build.sh",
        "publish:all": "./script/publish.sh",
        "example:build:dts": "./script/example.sh build:dts",
        "example:build": "./script/example.sh build",
        "example:start": "./script/example.sh start",
        "example:dev": "./script/example-dev.sh",
        "lint": "npm run lint:js && npm run lint:css",
        "lint:js": "genesis-eslint . --ext .js,.ts,.vue --fix",
        "lint:css": "genesis-stylelint **/*.{css,less,vue} --fix"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,js}": [
            "eslint --ext .js,.ts --fix",
            "git add"
        ],
        "*.{vue}": [
            "eslint --ext .js,.ts --fix",
            "git add"
        ]
    }
}
