{
    "name": "genesis",
    "private": true,
    "devDependencies": {
        "lerna": "^4.0.0"
    },
    "workspaces": [
        "packages/*",
        "examples/*"
    ],
    "scripts": {
        "build:dts": "vue-tsc vue-tsc --declaration --emitDeclarationOnly",
        "dev": "lerna run --stream --sort build",
        "lint": "npm run lint:js && npm run lint:css",
        "lint:js": "eslint . --ext .js,.ts,.vue --fix",
        "lint:css": ""
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,js}": [
            "eslint --ext .js,.ts --fix",
            "git add"
        ],
        "*.{vue}": [
            "eslint --ext .js,.ts --fix",
            "git add"
        ]
    }
}
